{
  "name": "@vinicunca/akar",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "workspaces": [
    "packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prepare": "pnpm simple-git-hooks",
    "bumpp": "bumpp package.json packages/*/package.json docs/package.json",
    "pub:release": "cd packages/akar && pnpm pub:release",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "test": "pnpm --filter @vinicunca/akar test",
    "story:dev": "pnpm --filter histoire story:dev --open"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@histoire/plugin-vue": "^0.17.17",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.1.0",
    "@vinicunca/eslint-config": "^2.7.4",
    "@vinicunca/perkakas": "^1.0.4",
    "@vitejs/plugin-vue": "^5.1.1",
    "bumpp": "^9.4.2",
    "eslint": "^9.8.0",
    "histoire": "^0.17.17",
    "lint-staged": "^15.2.8",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "5.5.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
