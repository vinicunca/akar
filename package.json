{
  "name": "akar-ui-monorepo",
  "type": "module",
  "version": "1.11.0",
  "packageManager": "pnpm@10.28.0",
  "license": "MIT",
  "repository": "vinicunca/akar",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "story:dev": "pnpm --filter histoire story:dev --open",
    "build": "pnpm run --filter akar build && pnpm run --filter plugins build && pnpm run --filter pohon-ui build",
    "build:docs": "pnpm run --filter docs build",
    "start": "node docs/.output/server/index.mjs",
    "build-only": "pnpm run -r build-only",
    "dev:prepare": "pnpm run -r dev:prepare",
    "docs:install": "pnpm --filter docs install",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:gen": "pnpm --filter docs gen",
    "docs:contributors": "pnpm --filter docs contributors",
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "bump": "changeset",
    "ci:version": "changeset version",
    "ci:publish": "pnpm dev:prepare && pnpm build && changeset publish",
    "taze": "taze patch -wIrl"
  },
  "devDependencies": {
    "@changesets/changelog-github": "catalog:base",
    "@changesets/cli": "catalog:base",
    "@commitlint/cli": "catalog:base",
    "@commitlint/config-conventional": "catalog:base",
    "@vinicunca/eslint-config": "catalog:base",
    "eslint": "catalog:base",
    "eslint-plugin-format": "catalog:base",
    "lint-staged": "catalog:base",
    "simple-git-hooks": "catalog:base",
    "taze": "catalog:base",
    "tsx": "catalog:base",
    "typescript": "catalog:base"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
