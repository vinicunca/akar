{
  "name": "@vinicunca/unocss-preset-monorepo",
  "type": "module",
  "version": "1.31.0",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r -F=./packages/* run build",
    "stub": "pnpm -r -F=./packages/* --parallel run stub",
    "dev": "pnpm stub",
    "release": "bumpp -r",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:update": "vitest --update",
    "play": "pnpm -C playground run dev",
    "taze": "taze major -wIrl",
    "typecheck": "tsc --noEmit",
    "publish:ci": "pnpm -F=./packages/core run publish:ci",
    "build:docs": "pnpm -F=./docs run build",
    "fb:deploy": "firebase deploy --only hosting:unocss"
  },
  "devDependencies": {
    "@types/node": "catalog:core",
    "@vinicunca/eslint-config": "catalog:base",
    "@vinicunca/perkakas": "catalog:core",
    "@vinicunca/unocss-preset": "workspace:*",
    "eslint": "catalog:base",
    "lint-staged": "catalog:base",
    "magic-string": "catalog:pohon",
    "prettier": "catalog:docs",
    "simple-git-hooks": "catalog:base",
    "taze": "catalog:base",
    "tsdown": "catalog:core",
    "typescript": "catalog:base",
    "unocss": "catalog:base",
    "vite": "catalog:core",
    "vitest": "catalog:core"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
